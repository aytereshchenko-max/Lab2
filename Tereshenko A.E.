#include <iostream>
#include <cmath>    // для математичних функцій
using namespace std;

int main() 
{
    //Задача Integer40
    int M;  // сума в гривнях
    cout << "Введіть суму M: ";
    cin >> M;

    int k = M / 200;   // кількість купюр по 200
    int r = M % 200;   // решта

    cout << "Купюр по 200 грн: " << k << endl;
    cout << "Решта: " << r << " грн" << endl;
    
    //Задача Boolean19
     // Вхідні дані
    int A, B, C;
    cout << "Введіть три цілі числа A, B, C: ";
    cin >> A >> B >> C;

    // Перевірка умови взаємної протилежності
    bool result = (A == -B) || (A == -C) || (B == -C);

    // Виведення результату
    cout << "Висловлювання: 'Серед трьох чисел є хоча б одна пара взаємно протилежних' — "
         << (result ? "ІСТИННЕ" : "ХИБНЕ") << endl;
    
    //Задача 22
    double x, y;   // змінні дійсного типу
    cout << "Введіть x: ";
    cin >> x;

    // Перевірка області визначення функції
    if (x == 0) {
        cout << "Помилка: логарифм від нуля не визначений." << endl;
        return 1;
    }
    if ((2 * x + sqrt(5 * x)) < 0) {
        cout << "Помилка: підкореневий вираз від’ємний." << endl;
        return 1;
    }
    if (cos(x) < 0) {
        cout << "Попередження: sqrt(cos(x)) — уявне число (cos(x) < 0)." << endl;
        return 1;
    }

    // Основна формула
    y = (1.0 / 5.0) * 
        ( (log10(abs(x)) * sqrt(abs(pow(x, 2) * pow(sin(x), 3) * sqrt(cos(x))))) /
          (cos(x) + (1.0 / 5.0) * sqrt(2 * x + sqrt(5 * x))) );

    // Виведення результату
    cout << "Результат: y = " << y << endl;

    return 0;
}
